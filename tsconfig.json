{
  "compilerOptions": {
    "outDir": "lib",
    "declaration": true,
    "lib": [
      // Needed to fetch typings can work
      "dom",
      "es6",
      "es2015.promise",
      "es2017"
    ],
    "downlevelIteration": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    // Recommended: https://www.typescriptlang.org/docs/handbook/release-notes/typescript-2-7.html#support-for-import-d-from-cjs-form-commonjs-modules-with---esmoduleinterop
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
